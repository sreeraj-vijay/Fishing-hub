<%- include('../layouts/header.ejs') %> -->

<main class="main">
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/anish123.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="false">Press To Continue</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
                            <form action="/forgotpasswordotp" method="post">

                                <% if(typeof message !== 'undefined') { %>
                                    <h10 style="color: red "><%= message %></h10>
                                <% } %>

                                <div class="form-group">
                                    <label for="singin-email-2">Mobile Number*</label>
                                    <input type="text" class="form-control" id="" name="mobile" required>
                                </div><!-- End .form-group -->

                                <div class="form-group">
                                    <label for="singin-password-2">New Password *</label>
                                    <input type="password" class="form-control" id="" name="newpassword" required>
                                </div><!-- End .form-group -->

                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>Send OTP</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                </div><!-- End .form-footer -->
                            </form>
                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main><!-- End .main -->

<script>
    function validateForm() {
        var phone = document.getElementById("mobile").value;
        var password = document.getElementById("password").value;
        var errorMessage = document.getElementById("error-message");

        // Regular expressions for validation
        var phoneRegex = /^\d{10}$/;
        var passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$/;

        if (!phoneRegex.test(phone)) {
            errorMessage.textContent = "Please enter a valid 10-digit phone number.";
            return false; // Prevent form submission
        }

        if (!passwordRegex.test(password)) {
            errorMessage.textContent = "Password must be at least 8 characters long and contain at least one uppercase letter, one lowercase letter, and one digit.";
            return false; // Prevent form submission
        }

        // Additional validation logic can be added here

        return true; // Allow form submission
    }
</script>

